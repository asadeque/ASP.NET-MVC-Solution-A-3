@model IEnumerable<MidTermSolution.Models.Order>

@{
    ViewBag.Title = "Orders";
}

<h2>Orders List</h2>

<p>
    @Html.ActionLink("Create New", "CreateOrder", null, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            Order Date
        </th>
        <th>
            Customer ID
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.OrderDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CustomerID)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditOrder", new { id = item.OrderID }, new { @class = "btn btn-success" })
            @Html.ActionLink("Details", "DetailsOrder", new { id = item.OrderID }, new { @class = "btn btn-success" })
            @Html.ActionLink("Delete", "DeleteOrder", new { id = item.OrderID }, new { @class = "btn btn-success" })
        </td>
    </tr>
}

</table>

@Html.ActionLink("Back to Admin", "Index", null, new { @class = "btn btn-success" })

