@model MidTermSolution.Models.BasketItem

@{
    ViewBag.Title = "Remove From Basket";
}

<h5>Are you sure you want to remove this from basket?</h5>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Image Url :
        </dt>

        <dd>
            @*<img style="width:25%" src="Product.ImageUrl" alt="Product.ProductDescription" />*@
           @Html.DisplayFor(model => model.Product.ImageUrl)
        </dd>

        <dt>
           Basket ID :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BasketID)
        </dd>

        <dt>
            Product Description :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Product.ProductDescription)
        </dd>

        <dt>
            Quantity :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Quantity)
        </dd>

        <dt>
           Price :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Product.Price)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" />
            <a href="@Url.Action("BasketSummary", "Products")" class="btn btn-primary">
                Back to List &nbsp;
                <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
            </a>
        </div>
    }
</div>
