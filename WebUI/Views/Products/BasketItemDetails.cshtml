@model MidTermSolution.Models.Product

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Product Details</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>Product Description :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProductDescription)
        </dd>
        <dt>Image Url :</dt>
        <dd>
            <div class="col-xs-2">
                <div>
                    @Html.DisplayFor(model => model.ImageUrl)
                    @*<img style="width:15%" src="~/img/@model.ImageUrl" alt="@model.ProductDescription" />*@
                    @*<img src="@Html.DisplayFor(model => model.ImageUrl )" alt="@Html.DisplayFor(model => model.ProductDescription)" class="img-responsive img-rounded thumb-img">*@
                    @*<img style="width:25%" src="@model.ImageUrl" alt="@model.ProductDescription">*@
                </div>
            </div>
        </dd>
        <dt>Price :</dt>
        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt>Cost Price :</dt>
        <dd>
            @Html.DisplayFor(model => model.CostPrice)
        </dd>
    </dl>
</div>
<p>
    <a href="@Url.Action("BasketSummary", "Products")" class="btn btn-primary">
        Back to List &nbsp;
        <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
    </a>
</p>
