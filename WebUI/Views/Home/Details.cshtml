@model MidTermSolution.Models.Product

@{
    ViewBag.Title = "Product Details";
}

<h2>Product Details</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Image :
        </dt>

        <dd>
            <img style="width:15%" src="/img/@Model.ImageUrl" alt="@Model.ProductDescription" />
        </dd>

        <dt>
            Product Description :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProductDescription)
        </dd>

        <dt>
            Price :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>


    </dl>
</div>
<p>
    @Html.ActionLink("Back to List", "Index", "Home", new { @class = "btn btn-success" })
</p>
